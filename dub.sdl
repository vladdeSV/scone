name "scone"
description "Cross-platform terminal/console input/output (text, colors)"
copyright "Copyright Â© 2015, Vladimirs Nordholm"
license "MIT"
authors "vladdeSV"

stringImportPaths "./source/scone/input/os/posix/locale/locale_data"
subPackage "./source/scone/output/"
subPackage "./source/scone/input/"

dependency "scone:output" version="*"
dependency "scone:input" version="*"

configuration "debug" {
    buildType "debug"
    buildRequirements "allowWarnings"
    targetType "executable"
    targetPath "bin/"
}

configuration "release" {
    buildType "release"
    targetType "library"
}

configuration "ci" {
    buildType "debug"
    targetType "library"
}
